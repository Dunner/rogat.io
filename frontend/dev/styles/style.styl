@import url("https://fonts.googleapis.com/css?family=Lobster")
@import url("https://fonts.googleapis.com/css?family=Droid+Sans")

* 
  font-family 'Droid Sans', sans-serif !important
  box-sizing border-box
  -webkit-font-smoothing auto


h1
  font-size 2.2rem
  line-height 150%
  margin-bottom 10px
  
h2
  font-size 1.9rem
  line-height 150%
  margin-bottom 10px

h3
  font-size 1.5rem
  line-height 150%
  margin-bottom 10px

html, body 
  width 100%
  height 100%
  position relative


body
  background #ebebeb
  max-width 1200px
  margin 0 auto
  padding-top 80px
  overflow-y scroll

#body-wrapper
  width 100%
  height auto



header 
  background #fff
  height 80px
  width 100%
  position fixed
  top 0px
  padding-top 0px
  max-width 1200px
  margin 0 auto
  box-shadow rgba(0, 0, 0, 0.2) 0px 3px 10px -4px
  z-index 9
  transition height 0.5s ease, background 0.3s ease
  overflow hidden
  
header .logo 
  padding-left 50px
  position absolute
  left 0px
  top 0px
  line-height 80px
  font-weight bold
  font-size 1.2rem
  cursor pointer
  
header nav 
  padding-right 50px
  position absolute
  right 0px
  top 0px
  line-height 80px
  font-weight bold
  font-size 1.2rem
  cursor pointer

header .topbar-wrapper
  position absolute
  top 0
  left 0
  right 0
  height 80px
  z-index 9

header .navigation-wrapper
  top calc(-200% - 160px)
  
header.nav-show 
  height 100%
  color white
  background #f8bbd0
  & .navigation-wrapper
    position absolute
    right 0px
    left 0px
    top 80px
    bottom 0px
    line-height 80px
    font-weight bold
    font-size 1.2rem
    cursor pointer
    

header .title 
  position absolute
  top 0
  left 25%
  text-align center
  height 80px
  width 50%
  line-height 80px
  font-weight bold
  font-size 2.6rem
  font-family 'Lobster', cursive !important
  color #444


  
.navigation-wrapper
  transition top 0.4s ease-out 0.1s
  padding 50px
  text-align center
  li
    font-size 2.8rem
    text-transform uppercase


main 
  width 100%
  background #f8bbd0
  min-height 300px

.p-50
  padding 50px
  

footer
  background #fbfbfb
  min-height 180px
  &:before
    content ''
    display block
    position absolute
    left 50px
    right 50px
    top 15px
    height 1px
    background #ddd