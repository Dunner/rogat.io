#worldmap {
  width: 100%;
  height: 100%;
  min-height: inherit;
  height: 500px;
}
path {
  stroke: #fff;
  stroke-width: 0.25px;
  stroke-color: #fff;
  fill: #fff;
  fill-opacity: 0.05;
  cursor: pointer;
}

path:hover {
  fill-opacity: 0.85 !important;
}

path.country-active {
  fill-opacity: 1 !important;
}